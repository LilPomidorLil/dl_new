syntax = "proto3";

package xs;

message TensorInfo {
    enum TensorType {
        UNDEFINED = 0;
        FLOAT = 1;
    }

    string name = 1;
    TensorType type = 2;
    repeated float float_data = 3;
    repeated int64 dims = 4;
}

message AttributeInfo {
    enum AttributeType {
        UNDEFINED = 0;
        FLOAT = 1;
        INT = 2;
        STRING = 3;
    }

    string name = 1;
    AttributeType type = 2;

    float f = 3;
    int64 i = 4;
    string s = 5;

    repeated float floats = 6;
    repeated int64 ints = 7;
    repeated string strings = 8;
}

message NodeInfo {
    string name = 1;
    repeated AttributeInfo attribute = 2;
}

message ConnectionInfo {
    int64 last_node_idx;
    int64 next_node_idx;
    int64 last_node_data_concept_idx;
    int64 next_node_data_concept_idx;
}

message GraphInfo {
    repeated NodeInfo nodes = 1;
    repeated TensorInfo tensors = 2;

    // Опциональное поля для хранения связей в графовой нейросети
    repeated int64 inputs = 3;
    repeated int64 outputs = 4;
    ConnectionInfo connections = 5;
}

message ModelInfo {
    string name = 1;
    GraphInfo graph = 7;
}